{
  "chat.disableAIFeatures": true,
  "luau-lsp.plugin.enabled": true,
  "[luau]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true,
    "editor.folding": true,
    "editor.minimap.showRegionSectionHeaders": true,
    "editor.minimap.showMarkSectionHeaders": true,
    "editor.minimap.markSectionHeaderRegex": "(?:\\bMARK:\\s*(?<separator>-?)\\s*(?<label>.*))|(?:#?\\bregion\\b\\s*(?<label>.*))|(?:\\bTODO:\\s*(?<label>.*))$"
  },
  "code-runner.executorMapByFileExtension": {
    ".luau": "lune run $fullFileName"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "**/*.model.json"
      ],
      "url": "https://raw.githubusercontent.com/magicsorafish/json-schema/refs/heads/main/rbx-rojo/model.schema.json"
    },
    {
      "fileMatch": [
        "**/*.meta.json"
      ],
      "url": "https://raw.githubusercontent.com/magicsorafish/json-schema/refs/heads/main/rbx-rojo/meta.schema.json"
    },
    {
      "fileMatch": [
        "**/*.project.json"
      ],
      "url": "https://raw.githubusercontent.com/magicsorafish/json-schema/refs/heads/main/rbx-rojo/project.schema.json"
    }
  ],
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/init.**.luau": "${dirname} - ${extname(1)}",
    "**/init.luau": "${dirname} - shared",
    "**/**.luau": "${filename} - shared",
    "**/**.**.luau": "${filename} - ${extname(1)}",
    "**/index.**.ts": "${dirname} - ${extname(1)}",
    "**/index.ts": "${dirname} - shared",
    "**/**.**.ts": "${filename} - ${extname(1)}",
    "**/**.project.json": "${dirname} - ${filename}"
  },
  "files.associations": {
    ".luaurc": "json"
  },
  "typescript.tsc.autoDetect": "off",
  "files.exclude": {
    ".github": false,
    "blog": false,
    "docs": false,
    ".luaurc": false,
    ".stylua.toml": false,
    ".styluaignore": false,
    "asphalt.lock.toml": false,
    "LICENSE": false,
    "README.md": false,
    "robloxfix.yml": false,
    "rokit.toml": false,
    "selene.toml": false,
    "sourcemap.json": false,
    "moonwave.toml": false,
  },
  "taskManager.exclude": "^__"
}
